<h1>Here is an App</h1>

<div class="row">
	<div class="col-md-12 text-center">
		<%= erb :_form %>		
	</div>
</div>

<div class="row">
	<div class="col-md-12 text-center">
		<div id="result"></div>
	</div>
</div>

<div class="row">
	<div class="col-md-12">
		<h3>Last five asks</h3>
		<table class="table table-bordered table-striped">
			<tr>
				<% @requests[0].attributes.keys.select {|k| k != 'id' && k !~ /updated/ }.each do |key| %>
					<th><%= key.capitalize.gsub('_',' ') %></th>
				<% end %>
			</tr>
			<% @requests.each do |req| %>
				<tr>
					<%= erb :_request, layout: false, locals: { request: req } %>				
				</tr>
			<% end %>
		</table>
	</div>		
</div>